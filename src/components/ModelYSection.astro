---
import Section from './Section.astro'
---

<Section
  title='Model Y'
  subtitle='2% Company Car Tax. '
  color='black'
  subcolor='zinc-800'
>
  <a slot='subtitle-link' class='underline hover:decoration-2' href='#'
    >Learn More</a
  >
  <div class='w-full' slot='footer'>
    <div class='flex flex-col flex-grow justify-end w-full pb-4'>
      <div
        class='flex max-[600px]:flex-col max-[600px]:gap-5 justify-center w-full gap-x-4 mx-auto pb-8'
      >
        <a
          class='max-[600px]:w-full w-[265px] h-[40px] border-[3px] border-zinc-800 bg-zinc-800 text-sm rounded font-medium text-gray-200 transition-colors inline-flex justify-center items-center hover:bg-black hover:text-white hover:border-black'
          href='#'>Explore Inventory</a
        >
        <a
          class='max-[600px]:w-full w-[265px] h-[40px] border-[3px] border-gray-200 bg-gray-200 text-sm rounded font-medium text-gray-600 transition-colors inline-flex justify-center items-center hover:bg-black hover:text-white hover:border-black'
          href='#'>Custom Order</a
        >
      </div>
      <p>
        <a
          class='text-xs text-gray-600 inline-block underline hover:decoration-2'
          href='#'>Schedule a Test Drive</a
        >
      </p>
    </div>
  </div>
  <img
    slot='background'
    src='/model-y.avif'
    alt='Model Y Tesla'
    class='h-full w-full object-cover object-center'
  />
</Section>
